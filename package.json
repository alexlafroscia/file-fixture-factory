{
  "name": "file-fixture-factory",
  "version": "4.0.0",
  "description": "Declaratively create real file system fixtures",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "postinstall": "husky install",
    "prepack": "yarn build && pinst --disable",
    "postpack": "pinst --enable",
    "release": "standard-version"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git@github.com:alexlafroscia/file-fixture-factory.git",
    "type": "git"
  },
  "author": "Alex LaFroscia <alex@lafroscia.com>",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@movable/prettier-config": "^0.3.6",
    "@tsconfig/node18": "^18.2.2",
    "@types/debug": "^4.1.5",
    "@types/node": "^17.0.10",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.4",
    "prettier": "^3.1.1",
    "standard-version": "^9.1.0",
    "typescript": "^5.3.3",
    "vitest": "^0.29.1"
  },
  "volta": {
    "node": "20.10.0",
    "yarn": "1.22.10"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "packageManager": "yarn@4.0.2"
}
